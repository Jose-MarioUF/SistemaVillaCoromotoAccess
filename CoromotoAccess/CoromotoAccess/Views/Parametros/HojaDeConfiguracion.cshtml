@{
    ViewBag.Title = "HojaDeConfiguracion";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Hoja de Configuración</h2>
    <p class="text-center">Utiliza las opciones a continuación para gestionar los parámetros del sistema.</p>

    <!-- Menú de Parámetros -->
    <div class="row mb-3">
        <div class="col-md-3">
            <div class="list-group" id="list-tab" role="tablist">
                <a class="list-group-item list-group-item-action active" id="list-idioma-list" data-toggle="list" href="#list-idioma" role="tab" aria-controls="idioma">Idioma</a>
                <a class="list-group-item list-group-item-action" id="list-metodos-pago-list" data-toggle="list" href="#list-metodos-pago" role="tab" aria-controls="metodos-pago">Métodos de Pago</a>
                <a class="list-group-item list-group-item-action" id="list-tipos-habitacion-list" data-toggle="list" href="#list-tipos-habitacion" role="tab" aria-controls="tipos-habitacion">Tipos de Habitación</a>
                <a class="list-group-item list-group-item-action" id="list-tipos-moneda-list" data-toggle="list" href="#list-tipos-moneda" role="tab" aria-controls="tipos-moneda">Tipos de Moneda</a>
            </div>
        </div>
        <div class="col-md-9">
            <div class="tab-content" id="nav-tabContent">
                <!-- Idioma -->
                <div class="tab-pane fade show active" id="list-idioma" role="tabpanel" aria-labelledby="list-idioma-list">
                    <h3>Idioma</h3>
                    <button class="btn btn-dark mb-3" data-toggle="modal" data-target="#agregarIdiomaModal">Agregar Idioma</button>
                    <ul class="list-group" id="listaIdiomas">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Español
                            <div>
                                <a class="btn btn-warning btn-sm" href="@Url.Action("ModificarIdioma", "Parametros")">Modificar</a>
                                <button class="btn btn-danger btn-sm" type="button" onclick="eliminarIdioma('Español')">Eliminar</button>
                            </div>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Inglés
                            <div>
                                <button class="btn btn-warning btn-sm" type="button" onclick="modificarIdioma('Inglés')">Modificar</button>
                                <button class="btn btn-danger btn-sm" type="button" onclick="eliminarIdioma('Inglés')">Eliminar</button>
                            </div>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Portugués
                            <div>
                                <button class="btn btn-warning btn-sm" type="button" onclick="modificarIdioma('Portugués')">Modificar</button>
                                <button class="btn btn-danger btn-sm" type="button" onclick="eliminarIdioma('Portugués')">Eliminar</button>
                            </div>
                        </li>
                        <!-- Agregar más idiomas según sea necesario -->
                    </ul>
                </div>
                <!-- Métodos de Pago -->
                <div class="tab-pane fade" id="list-metodos-pago" role="tabpanel" aria-labelledby="list-metodos-pago-list">
                    <h3>Métodos de Pago</h3>
                    <button class="btn btn-dark mb-3" data-toggle="modal" data-target="#agregarMetodoPagoModal">Agregar Método de Pago</button>
                    <ul class="list-group" id="listaMetodosPago">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Tarjeta
                            <div>
                                <a class="btn btn-warning btn-sm" href="@Url.Action("ModificarMetodoPago", "Parametros")">Modificar</a>
                                <button class="btn btn-danger btn-sm" type="button" onclick="eliminarMetodoPago('Tarjeta')">Eliminar</button>
                            </div>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Efectivo
                            <div>
                                <button class="btn btn-warning btn-sm" type="button" onclick="modificarMetodoPago('Efectivo')">Modificar</button>
                                <button class="btn btn-danger btn-sm" type="button" onclick="eliminarMetodoPago('Efectivo')">Eliminar</button>
                            </div>
                        </li>
                        <!-- Agregar más métodos de pago según sea necesario -->
                    </ul>
                </div>
                <!-- Tipos de Habitación -->
                <div class="tab-pane fade" id="list-tipos-habitacion" role="tabpanel" aria-labelledby="list-tipos-habitacion-list">
                    <h3>Tipos de Habitación</h3>
                    <button class="btn btn-dark mb-3" data-toggle="modal" data-target="#agregarTipoHabitacionModal">Agregar Tipo de Habitación</button>
                    <ul class="list-group" id="listaTiposHabitacion">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Estándar
                            <div>
                                <a class="btn btn-warning btn-sm" href="@Url.Action("ModificarTipoHabitacion", "Parametros")">Modificar</a>
                                <button class="btn btn-danger btn-sm" type="button" onclick="eliminarTipoHabitacion('Estándar')">Eliminar</button>
                            </div>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Lujo
                            <div>
                                <button class="btn btn-warning btn-sm" type="button" onclick="modificarTipoHabitacion('Lujo')">Modificar</button>
                                <button class="btn btn-danger btn-sm" type="button" onclick="eliminarTipoHabitacion('Lujo')">Eliminar</button>
                            </div>
                        </li>
                        <!-- Agregar más tipos de habitación según sea necesario -->
                    </ul>
                </div>
                <!-- Tipos de Moneda -->
                <div class="tab-pane fade" id="list-tipos-moneda" role="tabpanel" aria-labelledby="list-tipos-moneda-list">
                    <h3>Tipos de Moneda</h3>
                    <button class="btn btn-dark mb-3" data-toggle="modal" data-target="#agregarTipoMonedaModal">Agregar Tipo de Moneda</button>
                    <ul class="list-group" id="listaTiposMoneda">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Dólares
                            <div>
                                <a class="btn btn-warning btn-sm" href="@Url.Action("ModificarIdioma", "Parametros")">Modificar</a>
                                <button class="btn btn-danger btn-sm" type="button" onclick="eliminarTipoMoneda('Dólares')">Eliminar</button>
                            </div>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Euros
                            <div>
                                <button class="btn btn-warning btn-sm" type="button" onclick="modificarTipoMoneda('Euros')">Modificar</button>
                                <button class="btn btn-danger btn-sm" type="button" onclick="eliminarTipoMoneda('Euros')">Eliminar</button>
                            </div>
                        </li>
                        <!-- Agregar más tipos de moneda según sea necesario -->
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para agregar Idioma -->
<div class="modal fade" id="agregarIdiomaModal" tabindex="-1" role="dialog" aria-labelledby="agregarIdiomaModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="agregarIdiomaModalLabel">Agregar Idioma</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="agregarIdiomaForm">
                    <div class="form-group">
                        <label for="nuevoIdiomaModal">Nuevo Idioma:</label>
                        <input type="text" class="form-control" id="nuevoIdiomaModal" name="nuevoIdiomaModal" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

