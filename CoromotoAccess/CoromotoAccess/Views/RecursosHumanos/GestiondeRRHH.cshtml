    @{ ViewBag.Title = "GestiondeRRHH"; }

    

<div class="container mt-5">
    <h1 class="text-center mb-4">Gestión de RRHH</h1>
    <div>
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Aprobar Vacaciones</h2>
        </div>
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID Empleado</th>
                    <th>Días de Vacaciones Disponibles</th>
                    <th>Fecha de Inicio</th>
                    <th>Fecha de Fin</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>12345</td>
                    <td>10</td>
                    <td>2024-12-20</td>
                    <td>2024-12-30</td>
                    <td>Pendiente</td>
                    <td>
                        <button class="btn btn-success btn-sm" onclick="aprobarVacaciones(12345)">Aprobar</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <br />
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Gestión de Nómina</h2>
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Buscar..." aria-label="Buscar" aria-describedby="button-addon2">
            <button class="btn btn-info" type="button" id="button-addon2">Buscar</button>
        </div>
    </div>


    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Empleado</th>
                <th>Rol</th>
                <th>Salario</th>
                <th>Turnos Trabajados (Horas)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Pedro Sanchez</td>
                <td>Empleado</td>
                <td>$2000</td>
                <td>160</td>
            </tr>
        </tbody>
    </table>
    <br />
    <h2>Evaluación Empleados</h2>
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Rol</th>
                <th>Horas Trabajadas</th>
                <th>Comentario</th>
                <th>Calificación</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Pedro Sanchez</td>
                <td>Empleado</td>
                <td>160</td>
                <td>Buen desempeño</td>
                <td>Excelente   </td>
                <td><button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#evaluarEmpleadoModal">Evaluar</button></td>
            </tr>
        </tbody>
    </table>
</div>
    <!-- Modal Evaluar Empleado -->
    <div class="modal fade" id="evaluarEmpleadoModal" tabindex="-1" aria-labelledby="evaluarEmpleadoModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="evaluarEmpleadoModalLabel">Evaluar Empleado</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="comentario" class="form-label">Comentario:</label>
                            <textarea class="form-control" id="comentario" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="calificacion" class="form-label">Calificación:</label>
                            <select class="form-select" id="calificacion">
                                <option selected>Excelente</option>
                                <option>Bueno</option>
                                <option>Regular</option>
                                <option>Pobre</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-secondary ml-3" href="@Url.Action("GestiondeRRHH", "RecursosHumanos")">Cerrar</a>
                    <a class="btn btn-outline-dark ml-3" href="@Url.Action("GestiondeRRHH", "RecursosHumanos")">Guardar Evaluación</a>
                </div>
            </div>
        </div>

        <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
        <script>
            function aprobarVacaciones(idEmpleado) {
                if (confirm('¿Está seguro de que desea aprobar las vacaciones para el empleado con ID: ' + idEmpleado + '?')) {
                    alert('Vacaciones aprobadas para el empleado con ID: ' + idEmpleado);
                    // Lógica para aprobar las vacaciones
                }
            }
        </script>
