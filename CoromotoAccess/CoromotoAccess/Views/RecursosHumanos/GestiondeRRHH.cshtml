    @{ ViewBag.Title = "GestiondeRRHH"; }

    <!DOCTYPE html>
    <html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title</title>
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
        <div class="container mt-5">
            <h1 class="text-center mb-4">Gestión de RRHH</h1>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>Gestión de Turnos</h2>
                <button type="button" class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#crearTurnoModal">Crear Turno</button>
            </div>

            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ID del Turno</th>
                        <th>Nombre</th>
                        <th>Hora de Inicio</th>
                        <th>Hora de Final</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Mañana</td>
                        <td>08:00</td>
                        <td>16:00</td>
                        <td><button type="button" class="btn btn-danger">Eliminar</button></td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Tarde</td>
                        <td>16:00</td>
                        <td>00:00</td>
                        <td><button type="button" class="btn btn-danger">Eliminar</button></td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>Noche</td>
                        <td>00:00</td>
                        <td>08:00</td>
                        <td><button type="button" class="btn btn-danger">Eliminar</button></td>
                    </tr>
                </tbody>
            </table>

            <!-- Modal Crear Turno -->
            <div class="modal fade" id="crearTurnoModal" tabindex="-1" aria-labelledby="crearTurnoModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="crearTurnoModalLabel">Crear Turno</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="mb-3">
                                    <label for="nombreTurno" class="form-label">Nombre:</label>
                                    <input type="text" class="form-control" id="nombreTurno">
                                </div>
                                <div class="mb-3">
                                    <label for="horaInicio" class="form-label">Hora de Inicio:</label>
                                    <input type="time" class="form-control" id="horaInicio">
                                </div>
                                <div class="mb-3">
                                    <label for="horaFinal" class="form-label">Hora de Final:</label>
                                    <input type="time" class="form-control" id="horaFinal">
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <a class="btn btn-secondary ml-3" href="@Url.Action("GestiondeRRHH", "RecursosHumanos")">Cerrar</a>
                            <a class="btn btn-outline-dark ml-3" href="@Url.Action("GestiondeRRHH", "RecursosHumanos")">Crear Turno</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>Asignar Turno</h2>
                <button type="button" class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#asignarTurnoModal">Asignar Turno</button>
            </div>
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Empleado</th>
                        <th>Disponibilidad</th>
                        <th>Turno</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Pedro Sanchez</td>
                        <td>Asignado</td>
                        <td>Mañana</td>
                        <td><button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#asignarTurnoModal">Editar Turno</button></td>
                    </tr>
                </tbody>
            </table>

            <!-- Modal Asignar Turno -->
            <div class="modal fade" id="asignarTurnoModal" tabindex="-1" aria-labelledby="asignarTurnoModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="asignarTurnoModalLabel">Asignar Turno</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="mb-3">
                                    <label for="empleado" class="form-label">Empleado:</label>
                                    <select class="form-select" id="empleado">
                                        <option selected>Pedro Sanchez</option>
                                        <!-- Agregar más opciones según sea necesario -->
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="turno" class="form-label">Turno:</label>
                                    <select class="form-select" id="turno">
                                        <option selected>Mañana</option>
                                        <option>Tarde</option>
                                        <option>Noche</option>
                                    </select>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <a class="btn btn-secondary ml-3" href="@Url.Action("GestiondeRRHH", "RecursosHumanos")">Cerrar</a>
                            <a class="btn btn-outline-dark ml-3" href="@Url.Action("GestiondeRRHH", "RecursosHumanos")">Asignar Turno</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>Gestión de Nómina</h2>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Buscar..." aria-label="Buscar" aria-describedby="button-addon2">
                    <button class="btn btn-info" type="button" id="button-addon2">Buscar</button>
                </div>
            </div>
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Empleado</th>
                        <th>Rol</th>
                        <th>Salario</th>
                        <th>Turnos Trabajados (Horas)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Pedro Sanchez</td>
                        <td>Empleado</td>
                        <td>$2000</td>
                        <td>160</td>
                    </tr>
                </tbody>
            </table>

            <h2>Evaluación Empleados</h2>
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Rol</th>
                        <th>Horas Trabajadas</th>
                        <th>Comentario</th>
                        <th>Calificación</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Pedro Sanchez</td>
                        <td>Empleado</td>
                        <td>160</td>
                        <td>Buen desempeño</td>
                        <td>Excelente   </td>
                        <td><button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#evaluarEmpleadoModal">Evaluar</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <!-- Modal Evaluar Empleado -->
        <div class="modal fade" id="evaluarEmpleadoModal" tabindex="-1" aria-labelledby="evaluarEmpleadoModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="evaluarEmpleadoModalLabel">Evaluar Empleado</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="mb-3">
                                <label for="comentario" class="form-label">Comentario:</label>
                                <textarea class="form-control" id="comentario" rows="3"></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="calificacion" class="form-label">Calificación:</label>
                                <select class="form-select" id="calificacion">
                                    <option selected>Excelente</option>
                                    <option>Bueno</option>
                                    <option>Regular</option>
                                    <option>Pobre</option>
                                </select>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-secondary ml-3" href="@Url.Action("GestiondeRRHH", "RecursosHumanos")">Cerrar</a>
                        <a class="btn btn-outline-dark ml-3" href="@Url.Action("GestiondeRRHH", "RecursosHumanos")">Guardar Evaluación</a>
                    </div>
                </div>
            </div>


            <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    </body>
    </html>
