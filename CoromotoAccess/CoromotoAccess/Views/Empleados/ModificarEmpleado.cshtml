@{
    ViewBag.Title = "ModificarEmpleado";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Modificar Empleado</h2>
    <form class="form-horizontal">
        <br />
        <div class="form-group row">
            <label class="control-label col-md-2 text-black" for="NombreEmpleado">Nombre:</label>
            <div class="col-md-10">
                <input type="text" class="form-control" id="NombreEmpleado" name="NombreEmpleado" required />
            </div>
        </div>
        <br />
        <br />
        <div class="form-group row">
            <label class="control-label col-md-2 text-black" for="CorreoEmpleado">Correo Electrónico:</label>
            <div class="col-md-10">
                <input type="email" class="form-control" id="CorreoEmpleado" name="CorreoEmpleado" required />
            </div>
        </div>
        <br />
        <br />
        <div class="form-group row">
            <label class="control-label col-md-2 text-black" for="TelefonoEmpleado">Teléfono:</label>
            <div class="col-md-10">
                <input type="text" class="form-control" id="TelefonoEmpleado" name="TelefonoEmpleado" required />
            </div>
        </div>
        <br />
        <br />
        <div class="form-group row">
            <label class="control-label col-md-2 text-black" for="RolEmpleado">Rol:</label>
            <div class="col-md-10">
                <select class="form-control" id="RolEmpleado" name="RolEmpleado" required>
                    <option value="Admin">Admin</option>
                    <option value="Limpieza">Limpieza</option>  
                </select>
            </div>
        </div>
        <br />
        <br />
        <div class="form-group row">
            <div class="col-md-10 offset-md-2">
                <a href="@Url.Action("GestionEmpleados", "Empleados")" class="btn btn-secondary">Cancelar</a>
                <a href="@Url.Action("GestionEmpleados", "Empleados")" class="btn btn-primary mr-2">Guardar Cambios</a>
            </div>
        </div>
        <br />
        <br />
    </form>
</div>
