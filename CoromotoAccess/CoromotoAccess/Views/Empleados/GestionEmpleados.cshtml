@{
    ViewBag.Title = "GestionEmpleados";
}

<div class="container mt-5">

    <div class="row mb-3">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h2 class="text-center mb-4">Gestión de Empleados</h2>
            <button class="btn btn-outline-dark ml-3" data-bs-toggle="modal" data-bs-target="#empleadoModal">Agregar Empleado</button>
        </div>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Correo Electrónico</th>
                <th>Teléfono</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Empleado 1</td>
                <td>empleado1@empresa.com</td>
                <td>123456789</td>
                <td>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("ModificarEmpleado", "Empleados")">Modificar</a>
                    <button class="btn btn-danger btn-sm" onclick="eliminarEmpleado(1)">Eliminar</button>
                </td>
            </tr>
            <tr>
                <td>Empleado 2</td>
                <td>empleado2@empresa.com</td>
                <td>987654321</td>
                <td>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("ModificarEmpleado", "Empleados")">Modificar</a>
                    <button class="btn btn-danger btn-sm" onclick="eliminarEmpleado(2)">Eliminar</button>
                </td>
            </tr>
            <!-- Agrega más empleados según sea necesario -->
        </tbody>
    </table>
</div>

<div class="modal fade" id="empleadoModal" tabindex="-1" role="dialog" aria-labelledby="empleadoModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="empleadoModalLabel">Agregar/Modificar Empleado</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="empleadoForm">
                    <div class="form-group">
                        <label for="empleadoNombre">Nombre:</label>
                        <input type="text" class="form-control" id="empleadoNombre" name="empleadoNombre" required>
                    </div>
                    <div class="form-group">
                        <label for="empleadoCorreo">Correo Electrónico:</label>
                        <input type="email" class="form-control" id="empleadoCorreo" name="empleadoCorreo" required>
                    </div>
                    <div class="form-group">
                        <label for="empleadoTelefono">Teléfono:</label>
                        <input type="text" class="form-control" id="empleadoTelefono" name="empleadoTelefono" required>
                    </div>
                    <div class="form-group">
                        <label for="empleadoRol">Rol:</label>
                        <select class="form-control" id="empleadoRol" name="empleadoRol" required>
                            <option value="">Selecciona un rol</option>
                            <option value="Administrador">Administrador</option>
                            <option value="Editor">Editor</option>
                            <option value="Usuario">Usuario</option>
                            <option value="Invitado">Invitado</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="empleadoVilla">Villa:</label>
                        <select class="form-control" id="empleadoVilla" name="empleadoVilla" required>
                            <option value="">Selecciona una villa</option>
                            <option value="Villa Coromoto">Villa Coromoto</option>
                            <option value="Villa Vallita">Villa Vallita</option>
                        </select>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script>
    function eliminarEmpleado(id) {
        // Lógica para eliminar empleado
        alert('Empleado ' + id + ' eliminado.');
    }
</script>
