@{
    ViewBag.Title = "ActualizarPerfil";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white text-center">
                    <h3 class="mb-0 text-white">Actualizar Perfil</h3>
                </div>
                <div class="card-body p-4">
                    <form>
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <strong>Nombre:</strong>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" value="Pedro Sanchez" disabled>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <strong>ID:</strong>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" value="12345" disabled>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <strong>Teléfono:</strong>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" value="555-1234">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <strong>Correo Electrónico:</strong>
                            </div>
                            <div class="col-md-8">
                                <input type="email" class="form-control" value="PedroSanchez@gmail.com">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <strong>Rol:</strong>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" value="Empleado" disabled>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <strong>Imagen de Perfil:</strong>
                            </div>
                            <div class="col-md-8">
                                <input type="file" class="form-control" id="imagenPerfil" name="imagenPerfil">
                            </div>
                        </div>
                        <div class="text-center">
                            <a href="@Url.Action("MiPerfil", "Login")" class="btn btn-dark btn-lg">Guardar Cambios</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
